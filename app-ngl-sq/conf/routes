# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index(id:java.lang.String ?="")


GET	   /basket/experimenttype/:experimentType		controllers.container.Baskets.listByExperimentType(experimentType:java.lang.String)
GET	   /baskets										controllers.container.Baskets.list()
GET	   /baskets/:code					    		controllers.container.Baskets.show(code:java.lang.String, format: java.lang.String ?= "html")
POST   /baskets/:code					    		controllers.container.Baskets.add(code:java.lang.String, format: java.lang.String ?= "html")
POST   /baskets					    				controllers.container.Baskets.createOrUpdate(format: java.lang.String ?= "html")
DELETE /baskets/:code					    		controllers.container.Baskets.delete(code: java.lang.String,format: java.lang.String ?= "html")
DELETE /baskets/:code/containers/:contrainerCode	controllers.container.Baskets.delete_container(code: java.lang.String,contrainerCode: java.lang.String,format: java.lang.String ?= "html")

GET 	/containers/home									controllers.containers.tpl.Containers.home()


#template
GET		/tpl/containers/search								controllers.containers.tpl.Containers.search()
GET		/tpl/projects/list							controllers.tpl.helper.Lists.projects()
GET		/tpl/samples/list							controllers.tpl.helper.Lists.samples()
GET		/tpl/processType/list						controllers.tpl.helper.Lists.processusType()
GET		/tpl/experimenttypes/list					controllers.tpl.helper.Lists.experimentTypes()
GET		/tpl/containers/states/list					controllers.tpl.helper.Lists.containerStates()

# load data
GET	   	   /loaddata/home								controllers.dataload.SampleLoad.home()
POST   	   /loaddata									controllers.dataload.SampleLoad.uploadDataFromCSVFile()
POST	   /createtemplate								controllers.dataload.SampleLoad.createTemplateFile()
GET		   /loaddatatype								controllers.dataload.InitialData.loadDataType()
GET       /createprojects								controllers.dataload.InitialData.createProjectFromLims()

#api
GET		/api/containers								controllers.containers.api.Containers.list()
GET		/api/containers/projects					controllers.containers.api.Containers.samplesProjectsList()

GET	   /logout								controllers.administration.authentication.User.logOut()

# Home page

# Javascript routing
GET    /assets/javascripts/routes      controllers.Application.javascriptRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)