# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/											controllers.main.tpl.Main.home()

#Submission
# Recherche d'une soumission en fonction d'un etat :
GET		/submissions/search/:state					@controllers.submissions.api.Submissions.search(state: java.lang.String)
# Mise Ã  jour d'un objet submission et de ses composants :
PUT		/submissions/:code 							@controllers.submissions.api.Submissions.update(code: java.lang.String) 
GET		/submissions/:code/experiments/rawDatas		@controllers.submissions.api.Submissions.getRawDatas(code: java.lang.String)
PUT		/submissions/:code/state/:stateCode			@controllers.submissions.api.Submissions.updateState(code: java.lang.String, stateCode: java.lang.String)

# Creation des fichiers xml pour l'objet submission :
PUT		/submissions/:code/xml						@controllers.submissions.api.Submissions.createXml(code: java.lang.String)

# Traitement des AC et mise a jour du status de l'objet submission :
PUT		/submissions/:code/ebiAc					@controllers.submissions.api.Submissions.treatmentAc(code: java.lang.String) 
		
#Studies
POST	/api/studies								@controllers.studies.api.Studies.save()
GET		/api/studies/type							@controllers.studies.api.Studies.listTypes()


GET		/studies/:homeCode/home						controllers.studies.tpl.Studies.home(homeCode: java.lang.String)
GET		/tpl/studies/create							controllers.studies.tpl.Studies.create()
GET		/tpl/studies/js-routes						controllers.studies.tpl.Studies.javascriptRoutes()

#projects from ngl-common
GET		/api/projects								@controllers.projects.api.Projects.list()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               				controllers.Assets.at(path="/public", file)
GET     /messages.js                				controllers.main.tpl.Main.jsMessages()