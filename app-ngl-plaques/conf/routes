# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# plates tpl
GET	   	/plaques/:code									controllers.plaques.tpl.Plaques.home(code:java.lang.String)
GET		/tpl/plaques/new/search							controllers.plaques.tpl.Plaques.searchManips()
GET		/tpl/plaques/search								controllers.plaques.tpl.Plaques.search()
GET		/tpl/plaques/details							controllers.plaques.tpl.Plaques.details()
GET		/tpl/plaques/assets								controllers.plaques.tpl.Plaques.javascriptRoutes()

#plates api
POST	/api/plaques									controllers.plaques.api.Plaques.save()
GET		/api/plaques									controllers.plaques.api.Plaques.list()
GET    	/api/plaques/:code               				controllers.plaques.api.Plaques.get(code: String)

#manip api
GET    	/api/manip                						controllers.manips.api.Manips.list()


# list tpl
GET /tpl/projects/list									controllers.Lists.projects()
GET /tpl/samples/list									controllers.Lists.samples()
GET /tpl/etmanips/list									controllers.Lists.etmanips()
GET /tpl/etmateriels/list								controllers.Lists.etmateriels()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Javascript routing
#GET    /assets/javascripts/routes      			controllers.Application.javascriptRoutes()
